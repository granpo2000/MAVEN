datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Pedido {
  createdAt  DateTime @default(now())
  customer   Cliente? @relation(fields: [customerId], references: [id])
  customerId String?
  discount   Float?
  id         String   @id @default(cuid())
  product    Product? @relation(fields: [productId], references: [id])
  productId  String?
  quantity   Int?
  totalPrice Int?
  updatedAt  DateTime @updatedAt
}

model Cliente {
  address   Email?   @relation(fields: [addressId], references: [id])
  addressId String?
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  orders    Pedido[]
  phone     String?
  updatedAt DateTime @updatedAt
}

model Email {
  address_1 String?
  address_2 String?
  city      String?
  createdAt DateTime  @default(now())
  customers Cliente[]
  id        String    @id @default(cuid())
  state     String?
  updatedAt DateTime  @updatedAt
  zip       Int?
}

model Product {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  itemPrice   Float?
  name        String?
  orders      Pedido[]
  updatedAt   DateTime @updatedAt
}
